<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.jyodroid.jobsity.ui.series.SeriesFragment"
        android:label="@string/title_series"
        tools:layout="@layout/fragment_series">
        <action
            android:id="@+id/navigate_to_series_details"
            app:destination="@id/series_details"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.jyodroid.jobsity.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.jyodroid.jobsity.ui.notifications.NotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/series_details"
        android:name="com.jyodroid.jobsity.ui.series.SeriesDetailFragment"
        android:label="@string/series_detail_title"
        app:defaultNavHost="true"
        tools:layout="@layout/fragment_series_detail">
        <argument
            android:name="series"
            app:argType="com.jyodroid.jobsity.model.business.Series" />
    </fragment>

</navigation>