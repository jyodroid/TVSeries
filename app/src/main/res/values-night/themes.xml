<resources>
    <!-- Base application theme. -->
    <style name="Theme.TvSeries" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pearly_purple</item>
        <item name="colorPrimaryVariant">@color/purpureus</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="elevationOverlayEnabled">true</item>
        <item name="colorOnSurface">@color/lightest_blue</item>
        <item name="elevationOverlayColor">?attr/colorPrimary</item>
    </style>

    <style name="SeriesNameStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.TitleText</item>
        <item name="android:textColor">@color/pearly_purple</item>
    </style>

    <style name="GenresStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.NormalText</item>
    </style>

    <style name="SeriesInfoStyle">
        <item name="android:textColor">@color/pearly_purple</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.NormalText</item>
    </style>
</resources>