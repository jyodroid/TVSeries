<resources>
    <!-- Base application theme. -->
    <style name="Theme.TvSeries" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pearly_purple</item>
        <item name="colorSecondaryVariant">@color/purpureus</item>
        <item name="colorOnSecondary">@color/lightest_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.AppCompat.TitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SeriesCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="elevation">8dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="cardBackgroundColor">?attr/colorOnSecondary</item>
        <item name="android:stateListAnimator">@animator/selector_raise</item>
    </style>

    <style name="SeriesNameStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.TitleText</item>
        <item name="android:textColor">@color/text_dark_blue</item>
    </style>

    <style name="GenresStyle">
        <item name="android:textColor">@color/purpureus</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.NormalText</item>
    </style>

    <style name="SeriesInfoStyle">
        <item name="android:textColor">@color/text_dark_blue</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.NormalText</item>
    </style>

    <style name="TextAppearance.AppCompat.NormalText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EpisodeImageShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="LoadingProgress">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">?attr/colorSecondary</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconTint">@color/error_red</item>
        <item name="errorTextColor">@color/error_red</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintEnabled">true</item>
        <item name="android:hint">@string/pin_code</item>
    </style>

    <style name="TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:gravity">start|center_vertical</item>
        <item name="maxLines">1</item>
        <item name="android:longClickable">false</item>
        <item name="android:letterSpacing">0.3</item>
        <item name="android:inputType">textPassword</item>
    </style>
</resources>